<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<p><%= link_to'Back to the list', tasks_path %></p>
<p><%= link_to'edit', edit_task_path(@task) %></p>

<p><%= link_to 'Delete',
            task_path(@task.id),
            method: :delete,
            data: { confirm: "Delete #{@task.title}?" } %></p>

<a data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="/@task.title/@task.id"></a>




